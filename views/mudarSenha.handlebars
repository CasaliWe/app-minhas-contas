<header id="header-home">
    <div>
        <span>{{dadosUser.nome}}</span>
    </div>

    <div>
        <a href="/home">Contas</a> 
        <span class="text-white mx-1" style="opacity: .3;">|</span>
        <a href="/adicionar">Adicionar</a>
    </div>
</header>


<div class="mb-4 d-flex container-btn-esquerdo-top-all">
    <a class="btn-sair text-secondary" href="/">Voltar</a>
</div>


<h3 class="text-center text-secondary mb-3 mt-5">Atualização dos dados</h3>



<main class="p-5 d-flex flex-column justify-content-center align-items-center">
        <div class="d-flex mb-4">
            <div style="width: 50px; height:50px;" class="align-self-center me-3 d-flex justify-content-center align-items-center">
                <img src="/img/password.png" class="img-fluid">
            </div>

            <div class="d-flex flex-column">
                <span class="fw-bold fs-4">Senha</span>
                <span class="text-secondary fs-4">********</span>
            </div>
        </div>
        
        <form action="/atualizarSenha" method="post" class="w-100 mt-1 d-flex justify-content-center align-items-center flex-column">

            <input type="hidden" name="id" value="{{dadosUser.id}}">
            
            <input class="p-3 form-control mb-2" required type="password" placeholder="Digite sua senha atual*" name="atual">
            <input class="p-3 form-control mb-2" required type="password" placeholder="Digite sua nova senha*" name="nova">
            <input class="p-3 form-control mb-2" required type="password" placeholder="Confirme sua nova senha*" name="confirm">

            <button type="submit" class="btn btn-success mt-3 btn-lg">Atualizar Senha</button>

            {{#if messages.senhaAntiga}}
                <p class="mt-2 text-center text-danger">Senha antiga não confere!</p>
            {{/if}}

            {{#if messages.senhaDiferente}}
                <p class="mt-2 text-center text-danger">A nova senha não é a mesma da confirmação!</p>
            {{/if}}
        </form>
</main>