<header id="header-home">
    <div>
        <span>{{dadosUser.nome}}</span>
    </div>

    <div>
        <a href="/home">Contas</a> 
        <span class="text-white mx-1" style="opacity: .3;">|</span>
        <a href="/adicionar">Adicionar</a>
    </div>
</header>


<div class="mb-4 d-flex justify-content-between">
    <a class="btn-sair text-secondary" href="/">Voltar</a>
</div>


<h3 class="text-center text-secondary mb-3 mt-5">Atualização dos dados</h3>



<main class="p-5 d-flex flex-column justify-content-center align-items-center">
        <div class="d-flex mb-4">
            <div style="width: 50px; height:50px;" class="align-self-center me-3 d-flex justify-content-center align-items-center">
                <img src="/img/email.png" class="img-fluid">
            </div>

            <div class="d-flex flex-column">
                <span class="fw-bold fs-4">E-mail</span>
                <span class="text-secondary fs-4">{{dadosUser.email}}</span>
            </div>
        </div>
        
        <form action="/atualizarEmail" method="post" class="w-100 mt-2 d-flex justify-content-center align-items-center flex-column">

            <input type="hidden" name="id" value="{{dadosUser.id}}">
            
            <input class="p-3 form-control" required type="text" placeholder="Atualize seu nome*" name="email">

            <button type="submit" class="btn btn-success mt-4 btn-lg">Atualizar E-mail</button>

        </form>
</main>